Funcion resultado <- DeterminarResultado(opcion)
    Segun opcion Hacer
        Caso 1:
            resultado <- "GANADO"
        Caso 2:
            resultado <- "PERDIDO"
        Caso 3:
            resultado <- "EMPATADO"
        De Otro Modo:
            resultado <- "INVALIDO"
    FinSegun
FinFuncion

Funcion puntos <- CalcularPuntosPorResultado(resultado)
    Segun resultado Hacer
        Caso "GANADO":
            puntos <- 3
        Caso "EMPATADO":
            puntos <- 1
        Caso "PERDIDO":
            puntos <- 0
        De Otro Modo:
            puntos <- 0
    FinSegun
FinFuncion

