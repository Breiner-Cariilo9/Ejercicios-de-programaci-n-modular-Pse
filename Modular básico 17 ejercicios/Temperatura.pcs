// ========== FUNCIONES ==========

// Funci√≥n para leer temperatura en Celsius
Funcion celsius <- LeerTemperaturaCelsius()
    Escribir "Ingrese la temperatura en grados Celsius:"
    Leer celsius
FinFuncion

// Funci√≥n para convertir Celsius a Fahrenheit
Funcion fahrenheit <- CelsiusAFahrenheit(celsius)
    fahrenheit <- (celsius * 9/5) + 32
FinFuncion

// Funci√≥n para mostrar conversiones y an√°lisis de temperatura
Funcion MostrarConversiones(celsius, fahrenheit)
    Definir kelvin Como Real
    kelvin <- celsius + 273.15
    
    Escribir ""
    Escribir "=== CONVERSIONES DE TEMPERATURA ==="
    Escribir "------------------------------------"
    Escribir "Celsius:     ", celsius, "¬∞C"
    Escribir "Fahrenheit:  ", fahrenheit, "¬∞F"
    Escribir "Kelvin:      ", kelvin, "K"
    Escribir "------------------------------------"
    
    // An√°lisis de la temperatura
    Escribir ""
    Escribir "=== AN√ÅLISIS DE TEMPERATURA ==="
    
    Si celsius <= 0 Entonces
        Escribir "üßä CONGELACI√ìN - El agua se congela"
        Si celsius <= -40 Entonces
            Escribir "‚ùÑÔ∏è EXTREMADAMENTE FR√çO - Peligroso para humanos"
        SiNo
            Si celsius <= -20 Entonces
                Escribir "ü•∂ MUY FR√çO - Usar ropa de abrigo"
            FinSi
        FinSi
    SiNo
        Si celsius <= 15 Entonces
            Escribir "üß• FR√çO - Se recomienda abrigo"
        SiNo
            Si celsius <= 25 Entonces
                Escribir "üå§Ô∏è TEMPLADO - Temperatura agradable"
            SiNo
                Si celsius <= 35 Entonces
                    Escribir "‚òÄÔ∏è CALOR - Temperatura c√°lida"
                SiNo
                    Si celsius >= 100 Entonces
                        Escribir "üí® EBULLICI√ìN - El agua hierve"
                    SiNo
                        Escribir "üî• MUY CALOR - Buscar sombra y hidratarse"
                    FinSi
                FinSi
            FinSi
        FinSi
    FinSi
    
    // Informaci√≥n adicional
    Si celsius = 37 Entonces
        Escribir "üå°Ô∏è Temperatura corporal humana normal"
    FinSi
    
    Si celsius = 20 Entonces
        Escribir "üè† Temperatura ambiente ideal"
    FinSi
FinFuncion

// ========== PROGRAMA PRINCIPAL ==========

Algoritmo ConversionTemperatura
    Definir celsius, fahrenheit Como Real
    
    Escribir "=== CONVERSOR DE TEMPERATURA CELSIUS A FAHRENHEIT ==="
    Escribir "Programa para convertir temperatura y proporcionar an√°lisis"
    Escribir ""
    
    celsius <- LeerTemperaturaCelsius()
    fahrenheit <- CelsiusAFahrenheit(celsius)
    MostrarConversiones(celsius, fahrenheit)
    
    Escribir ""
    Escribir "¬°Gracias por usar el conversor de temperatura!"
    
FinAlgoritmo
